                </div>
            </div>
            <div class="col-md-9 cart-items">
                <h1 id="count">My Shopping Bag @listTungSanPham.Count()</h1>

                @for (int i = 0; i < listTungSanPham.Count(); i++)
                {
            <script>
                        $(document).ready(function (c) {
                            $('.close-@i').on('click', function (c) {
                                $('.cart-header-@i').fadeOut('slow', function (c) {
                                    $('.cart-header-@i').remove();
                                });
                                $.ajax({
                                    url: "https://localhost:44307/deletesanpham",
                                    data:
                                    {
                                    id:@i
                                    },
                                    success: function (data) {
                                        if (data == "Success")
                                            alert("Xóa Thành Công");
                                        else
                                            alert("Xóa Không Thành Công");
                                    }
                                    });
                            });
                        });
            </script>
                    <div class="cart-header-@i cart-header">
                        <div class="close-@i close1"> </div>
                        <div class="cart-sec simpleCart_shelfItem">
                            <div class="cart-item cyc">
