
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";

    List<BaiTapLon.Models.Entities.SanPham> sanPham = ViewBag.SanPham;
    Random random = new Random();
}
<div class="arriv">
    <div class="container">
        <div class="arriv-top">
            <div class="col-md-6 arriv-left">
                <img src="~/Content/images/1.jpg" class="img-responsive" alt="">
                <div class="arriv-info">
                    <h3>NEW ARRIVALS</h3>
                    <p>REVIVE YOUR WARDROBE WITH CHIC KNITS</p>
                    <div class="crt-btn">
                        <a href="details">TAKE A LOOK</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 arriv-right">
                <img src="~/Content/images/2.jpg" class="img-responsive" alt="">
                <div class="arriv-info">
                    <h3>TUXEDO</h3>
                    <p>REVIVE YOUR WARDROBE WITH CHIC KNITS</p>
                    <div class="crt-btn">
                        <a href="details">SHOP NOW</a>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<div class="special">
    <div class="container">
        <h3>Special Offers</h3>
        <div class="specia-top">
            <ul class="grid_2">
                @for (int i = 0; i < 4; i++)
                {
                    int j = random.Next(0, sanPham.Count());
                    <li>
                        <a href="https://localhost:44307/details?Name=@sanPham[j].Name"><img src="@sanPham[j].Image" class="img-responsive" alt=""></a>
                        <div class="special-info grid_1 simpleCart_shelfItem">
                            <h5>@sanPham[j].Name</h5>
                            <div class="item_add"><span class="item_price"><h6>ONLY $@sanPham[j].Price.00</h6></span></div>
                            <div class="item_add"><span class="item_price"><button id="@j">add to cart</button></span></div>
                        </div>
                    </li>
                    <script>
                    $(document).ready(function () {
                        $("#@j").click(function(){
                            $.ajax({
                                    url: "https://localhost:44307/addsanpham",
                                    data:
                                    {
                                    Image:"@sanPham[j].Image",
                                    Price:@sanPham[j].Price,
                                    Name: "@sanPham[j].Name",
                                    ShoeFirm:"@sanPham[j].ShoeFirm"
                                    },
                                    success: function (data) {
                                        if (data == "Success")
                                            alert("Thêm Thành Công");
                                        else
                                            alert("Thêm Không Thành Công");
                                    }
                                    });
                        });
                    });
                    </script>
                }
                <div class="clearfix"> </div>
            </ul>
        </div>
    </div>
</div>