                <!-- start header_right -->
                <script>
                    $(document).ready(function () {
                        $("#login").click(function () {
                            $.ajax({
                                url: "/login",
                                type: "POST",
                                data:
                                {
                                    email: $("#email").val(),
                                    password: $("#password").val()
                                },
                                success: function (data) {
                                    if (data == "Success") {
                                        alert($("#email").val());
                                        alert("Đăng Nhập Thành Công");
                                        $("#loginContainer").hide();
                                        $("#logout").show();
                                    }
                                    else
                                        alert("Đăng Nhập Không Thành Công");
                                }
                            });
                        });
                    });
